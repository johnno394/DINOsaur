<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeacherViewQuestionDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <!-- Quiz title -->
        <TextView
            android:id="@+id/qd_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mindfulness"
            android:textSize="30dp"
            android:textStyle="bold"></TextView>

        <!-- date and edit btn -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:gravity="center">

            <TextView
                android:id="@+id/qd_tv_date_posted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mon Apr 4, 2022"
                android:layout_weight="1"
                android:textSize="16dp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2">

            </TextView>

            <androidx.cardview.widget.CardView
                android:id="@+id/qd_cv_edit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardBackgroundColor="#FF6252"
                app:cardCornerRadius="20dp"
                android:layout_margin="5dp"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/editicon"
                        android:layout_gravity="center"
                        android:layout_margin="5dp">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Edit"
                        android:textColor="#FFFFFF"
                        android:textSize="16dp"
                        android:layout_marginEnd="5dp"
                        android:textStyle="bold"></TextView>

                </LinearLayout>



            </androidx.cardview.widget.CardView>

        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#FF6252"
            android:text="Short Title"
            android:textSize="18dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/qd_tv_short_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mindfulness"
            android:textSize="16dp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:textColor="#FF6252"
            android:text="Question"
            android:textSize="18dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/qd_tv_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How have you been feeling about tomorrows exam?"
            android:textSize="16dp"></TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF6252"
            android:layout_marginTop="20dp"
            android:text="Expiration Time"
            android:textSize="18dp"
            android:textStyle="bold"></TextView>

        <!-- Layout for date and time buttons-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <!-- Button Date-->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:cardCornerRadius="20dp"
                android:layout_weight="1"
                android:elevation="4dp"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/date"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp">

                    </ImageView>

                    <TextView
                        android:id="@+id/qd_tv_expiry_date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="01/01/2001"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="center">

                    </TextView>


                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <!-- Button Time-->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:cardCornerRadius="20dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/timebig"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp">

                    </ImageView>

                    <TextView
                        android:id="@+id/qd_tv_expiry_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="01:01:01"
                        android:textSize="18dp"
                        android:textStyle="bold"></TextView>

                </LinearLayout>



            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:text="Responses"
            android:textSize="28dp"
            android:textStyle="bold"></TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/qd_rv_responses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>