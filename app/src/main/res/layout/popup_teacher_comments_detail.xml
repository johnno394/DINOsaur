<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/rounded_corners"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/pup_ll_comments_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pup_exit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="40dp"
            app:srcCompat="@android:drawable/ic_delete"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="32dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Wellbeing Entry"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="24dp">

        </TextView>

        <TextView
            android:id="@+id/pup_tv_name_of_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginTop="10dp"
            android:text="Name of Student"
            android:layout_gravity="center"
            android:textSize="20dp">

        </TextView>


        <ImageView
            android:id="@+id/pup_iv_emo_img"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:srcCompat="@mipmap/ic_launcher_round"
            android:layout_gravity="center"
            android:layout_marginTop="40dp">

        </ImageView>

        <TextView
            android:id="@+id/pup_tv_dino_feeling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Feeling something"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Intensity"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp">

        </TextView>


        <ProgressBar
            android:id="@+id/pup_prog_bar_intensity"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/custom_progress_bar_teacher_home"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp"
            android:indeterminateTint="#FF6252"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp">

        </ProgressBar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:gravity="center"
            android:textAlignment="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAlignment="viewEnd"
                android:layout_weight="0"
                android:text="0">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAlignment="viewEnd"
                android:layout_weight="1"
                android:text="1">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAlignment="viewEnd"
                android:layout_weight="1"
                android:text="2">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAlignment="viewEnd"
                android:layout_weight="1"
                android:text="3">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAlignment="viewEnd"
                android:layout_weight="1"
                android:text="4">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAlignment="viewEnd"
                android:layout_weight="1"
                android:text="5">
            </TextView>



        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Comments"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp">

        </TextView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:elevation="3dp"
            app:cardBackgroundColor="#333333"
            app:cardCornerRadius="15dp">

            <TextView
                android:id="@+id/pup_tv_student_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Sample text lorem ipsum tings. Wilson tantalising as always lmao"
                android:layout_gravity="center"
                android:layout_margin="30dp">

            </TextView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/pup_tv_posted_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:text="Posted 20 mins ago">

        </TextView>


    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>